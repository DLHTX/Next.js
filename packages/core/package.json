{
  "name": "kirika",
  "version": "0.1.1",
  "description": "Convert your notes between different formats",
  "repository": "hyoban/kirika",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
