{
	"$schema": "https://json.schemastore.org/eslintrc",
	"root": true,
	"extends": ["next/core-web-vitals", "plugin:tailwindcss/recommended"],
	"plugins": ["tailwindcss"],
	"settings": {
		"tailwindcss": {
			"callees": ["cn"],
			"config": "./tailwind.config.js"
		},
		"next": {
			"rootDir": ["./"]
		}
	},
	"overrides": [
		{
			"files": ["*.ts", "*.tsx"],
			"parser": "@typescript-eslint/parser"
		}
	]
}
